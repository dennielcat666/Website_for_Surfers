.updates
	&__box
		margin-top 175px
	&__name
		position relative
		font-family secondFontFamily
		text-transform uppercase
		font-size 18px
		font-weight 700
		letter-spacing 2px
		&::after
			position absolute
			top 38px
			left 50%
			transform translateX(-50%)
			content ''
			background-image url('../images/X_icon.png')
			background-repeat no-repeat
			width 13px
			height 13px
	&__block
		display flex
		padding-left 50px
		padding-right 50px
		margin-top 63px
	&__wrap
		max-width 270px
		width 100%
		background-color #fff
		&:not(:first-child)
			margin-left 30px
	&__img
		width 270px
		height 203px
		background-repeat no-repeat
	&__text
		padding 21px 26px
		font-family fontFamily
		font-size 16px
		color #787878
	&__link
		margin-top 39px
		padding 11px 30px
		background-color blue-color
		color #fff
		font-size 14px
		display inline-block
		border none 
		font-family secondFontFamily
		text-transform uppercase
		font-weight 700
		letter-spacing 1px

.updates__wrap:hover
	box-shadow 0px 0px 25px rgba(0,0,0,0.3)
	& .updates__text
		color #0022ff

.flex-center
	display flex
	justify-content center