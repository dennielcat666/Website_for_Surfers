.tabs
	margin-top 33px

	&__toggles
		border-bottom 1px solid #d9d9d9
		margin-bottom 21px
		display flex

	&__toggle
		font-size 14px
		font-family secondFontFamily
		font-weight 700
		text-transform uppercase
		color #a0a0a0
		position relative
		flex 0 1 auto
		cursor pointer
		@media small
			font-size 12px

		&:not(:first-child)
			margin-left 30px
			@media small
				margin-left 15px

		&.active
			border-bottom 3px solid blue-color
			color #000000
			font-weight 700

		& + &
			border-left none

		&.active
			&:after
				content ""
				size 100% 1px
				background-color bg-color
				position absolute
				left 0
				bottom -1px
				display block

	&__tab
		line-height 24px
		
		&:not(.active)
			display none