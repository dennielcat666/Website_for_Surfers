.offer
	&__banner
		margin-top 297px
		background-size cover
		background-image url('../images/offer_background.png')
		background-position 50%
		background-repeat no-repeat
		height 640px
		width 100%
		@media tablet
			margin-top 100px
			height 320px
		@media small
			display none
	&__content
		background-color #ffffff
		@media small
			margin-top 350px
	&__box-promo
		position relative
		background-color #ffffff
		margin-top -344px
		padding 94px 0px 0px 0px
		&:before
			background-color #ffffff
			position absolute
			top 0
			bottom 0
			right: 100%;
			content ''
			width 100vw
		@media tablet
			padding 47px 0px 0px 0px
		@media mobile
			padding 47px 0px 0px 0px
		
		&__name
			position relative
			max-width 370px
			text-align center
			font-family secondFontFamily
			font-weight 700
			font-size 18px
			text-transform uppercase
			letter-spacing: 1px;
			&:after
				position absolute
				top 39px
				left 50%
				transform translateX(-50%)
				content ''
				background-image url('../images/X_icon.png')
				background-repeat no-repeat
				width 13px
				height 13px
		&__text
			max-width 370px
			font-family thirdFontFamily
			font-size 22px
			margin-top 50px
			line-height 38px
			@media mobile
				font-size 14px
				line-height 25px
			@media small
				text-align center
				margin-top 35px
		&__link
			margin-top 20px
			display inline-block
			color blue-color
			font-family secondFontFamily
			font-weight 700
			font-size 16px
			border-bottom 2px solid blue-color
			@media mobile
				font-size 14px
		&__player
			margin-top -80px
			margin-left 41px
			background-color #ff0000
			width 500px
			height 300px
			@media tablet
				margin-top 25px
				margin-left 41px
			@media mobile
				margin-left 0px
				background-color #fff
			@media small
				height 220px
		&__iframe
			width 100%
			max-width 500px
			max-height calc(0.52 * 100vw)
			margin-left auto
			margin-right auto
			display block
			overflow hidden

.md-center
	@media tablet
		display flex
		justify-content center