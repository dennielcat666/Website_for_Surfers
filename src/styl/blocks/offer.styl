.offer
	&__banner
		margin-top 297px
		background-size cover
		background-image url('../images/offer_background.png')
		background-position 50%
		background-repeat no-repeat
		height 640px
		width 100%
	&__content
		background-color #ffffff
	&__box-promo
		position relative
		background-color #ffffff
		margin-top -344px
		padding 94px 0px 0px 0px
		&:before
			background-color #ffffff
			position absolute
			top 0
			bottom 0
			right: 100%;
			content ''
			width 100vw
		&__name
			position relative
			max-width 370px
			text-align center
			font-family secondFontFamily
			font-weight 700
			font-size 18px
			text-transform uppercase
			letter-spacing: 1px;
			&:after
				position absolute
				top 39px
				left 50%
				transform translateX(-50%)
				content ''
				background-image url('../images/X_icon.png')
				background-repeat no-repeat
				width 13px
				height 13px
		&__text
			max-width 370px
			font-family thirdFontFamily
			font-size 22px
			margin-top 50px
			line-height 38px
		&__link
			margin-top 20px
			display inline-block
			color blue-color
			font-family secondFontFamily
			font-weight 700
			font-size 16px
			border-bottom 2px solid blue-color
		&__player
			margin-top -80px
			margin-left 41px
			background-color #ff0000
			width 500px
			height 300px