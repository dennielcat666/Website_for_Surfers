.hide-moretablet
	display none
	@media tablet
		display block

.header
	position relative
	background-image url('../images/background.png')
	background-size cover
	background-repeat no-repeat
	width 100%
	height 700px
	padding-top 31px

	&::before
		content ''
		background-image linear-gradient(to bottom, #000000, #ffffff)
		opacity: 0.2;
		position absolute
		top 0
		bottom 0
		width 100%
		z-index 1

	&::after
		content ''
		background-image linear-gradient(to top, #ffffff, transparent)
		position absolute
		top 0
		bottom 0
		width 100%
		z-index 1

	&__box
		position relative
		z-index 2

		&--rem
			display flex
			justify-content space-between
			align-items center
			@media tablet
				justify-content space-between
			@media small
				flex-wrap wrap

.my_flex_align
	display flex
	align-items center

.logo
	letter-spacing 0px
	line-height 1
	font-family secondFontFamily
	font-weight 700
	font-size 31px

.menu
	padding-right 44px
	@media tablet
		display none

.menu__item
	display inline-block
	font-family secondFontFamily
	font-weight 700
	font-size 14px
	color #000000
	border none
	text-transform uppercase
	padding 2px 9px 2px 9px
	margin-left 5px

	&:not(:first-child)
		margin-left 5px

	&:hover
		color #fff
		background-color blue-color
.menu--side
	display flex
	flex-direction column

.my_flex_end
	display flex
	justify-content flex-end

.sprite
	display flex
	@media small
		width 100%
		flex 1 0 100%
		margin-top 10px
		justify-content center

	&__link
		border none
		background-image url(../images/sprite.png)
		background-repeat no-repeat
		width 36px
		height 36px

		&--facebook
			background-position 0px 0px

		&--instagram
			background-position -46px 0px

		&--mail
			background-position -92px 0px

		&:not(:last-child)
			margin-right 10px

.title
	margin-top 115px
	font-family thirdFontFamily
	font-weight 400
	font-style italic
	text-align center
	@media small
		margin-top 50px

	&__name
		font-size 50px
		color #000000
		@media small
			font-size 30px

	&__promo
		font-size 24px
		color #ffffff
		line-height: 15px;
		@media small
			font-size 18px
